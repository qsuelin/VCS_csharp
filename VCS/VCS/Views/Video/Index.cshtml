

<div class="container body-content">
    <form action="/search/results" method="post">
        <p>
            <lable for="searchTerm">Search: </lable>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>
        <input type="submit" value="Search" />
    </form>
</div>


@if (ViewBag.jobs == null)
{
    <p>OOPS! No videos yet!</p>
}
else
{
    <div>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Channel</th>
                <th>Date</th>
                <th>Tag</th>
            </tr>
                @foreach (var video in ViewBag.jobs)
                {
                    <tr>
                        <td>@video.Title</td>
                        <td>@video.Channel</td>
                        <td>@video.Date</td>
                        <td>@video.TagText</td>
                        <td><a asp-controller="Video" asp-action="Detail" asp-route-id=@video.VideoId>Detail</a></td>
                        <td><a asp-controller="Video" asp-action="Edit" asp-route-id=@video.VideoId>Edit</a></td>
                    </tr>
                   
                }
            

        </table>
    </div>
}